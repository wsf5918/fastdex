<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@drawable/home_left"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" 
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/button_reading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/button_selector"
                android:padding="5dp"
                android:text="@string/app_name"
                android:textColor="#808080"
                android:textSize="20sp" 
                android:onClick="onViewClick"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >
            <Button
                android:id="@+id/button_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/button_selector"
                android:padding="5dp"
                android:text="错题记录"
                android:textColor="#808080"
                android:textSize="20sp" 
                android:onClick="onViewClick"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/button_selector"
                android:padding="5dp"
                android:text="好友聊天"
                android:textColor="#808080"
                android:textSize="20sp" 
                android:onClick="onViewClick"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/button_selector"
                android:padding="5dp"
                android:text="系统设置"
                android:textColor="#808080"
                android:textSize="20sp" 
                android:onClick="onViewClick"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/home_left_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/menu_layout"
        android:orientation="vertical" 
        android:baselineAligned="false">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kouzi_layout"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="170dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:layout_width="54dp"
                android:layout_height="21dp"
                android:layout_centerInParent="true"
                android:background="@drawable/home_center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:layout_width="54dp"
                android:layout_height="21dp"
                android:layout_centerInParent="true"
                android:background="@drawable/home_center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:layout_width="54dp"
                android:layout_height="21dp"
                android:layout_centerInParent="true"
                android:background="@drawable/home_center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:layout_width="54dp"
                android:layout_height="21dp"
                android:layout_centerInParent="true"
                android:background="@drawable/home_center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:layout_width="54dp"
                android:layout_height="21dp"
                android:layout_centerInParent="true"
                android:background="@drawable/home_center" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>