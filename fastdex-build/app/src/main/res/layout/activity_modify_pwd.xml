<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.fertilizercrm.view.TitleView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_heigth"
        android:tag="《:(修改密码)"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="当前密码"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/et_old_pwd"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入当前密码"
            android:textSize="12sp"
            android:password="true"
            />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:background="#cbcccd"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="新密码"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="14sp"
            />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入新密码"
            android:textSize="12sp"
            android:password="true"
            />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:background="#cbcccd"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="重复密码"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="14sp"
            />

        <EditText
            android:id="@+id/et_pwd_repeat"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请再次输入新密码"
            android:textSize="12sp"
            android:password="true"
            />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:background="#cbcccd"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btn_common_height"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="确    定"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_green_selector"/>

</LinearLayout>
